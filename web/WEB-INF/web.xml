<filter>
        <filter-name>springSecurityFilterChain</filter-name>
        <filter-class>
            org.springframework.web.filter.DelegatingFilterProxy
        </filter-class>
    </filter>
    <filter-mapping>
        <filter-name>springSecurityFilterChain</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>-->
    
    
    <!--      Ck begin -->    
        <filter>
        <filter-name>usrFilter</filter-name>
        <filter-class>com.beans.UpdateSavedRequestFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>usrFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <!--      /Ck end -->

    
<!-- 
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>-->
    <welcome-file-list>
        <welcome-file>redirect.jsp</welcome-file>
    </welcome-file-list>
</web-app>
